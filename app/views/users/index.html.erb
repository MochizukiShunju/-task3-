<html lang="ja">

  <body>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <% if flash[:notice] %>
            <div class="flash">
              <%= flash[:notice] %>
            </div>
          <% end %>
          <%= render partial: 'layouts/body', locals: { user: current_user, book: @book} %>
        </div>

        <div class="col-md-8 offset-md-1">
          <h1>Users</h1>
          <table class="table table-hover table-inverse">
            <tr>
              <th>
              <th>image</th>
              <th>name</th>
            </tr>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= link_to user_path(user.id) do %>
                   <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %><br>
                  <% end %>
                </td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>

  </body>

  <footer class="container">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </footer>
</html>
