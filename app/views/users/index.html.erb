  <body>
    <main class="format">

     <%= render 'layouts/body' %>

      <div>
        <h1>Users</h1>
        <table>

          <tr>
            <th>
            <th>image</th>
            <th>name</th>
          </tr>

          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %><br></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>

        </table>
      </div>

    </main>

  </body>

