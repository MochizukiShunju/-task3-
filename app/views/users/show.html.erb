<html lang="ja">
  <head>
    <mate charset="UTF-8" />
  </head>

  <body class="container">
    <div class="row">
      <div class="col-sm-3">
        <%= render 'layouts/body' %>
      </div>
      <div class="col-sm-9">
        <h1>Books</h1>
        <table class="table" >
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>

          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %><br></td>
              <td><a href="<%= book_path(book.id) %>"><%= book.title %></a></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>


  </body>

  <footer class="container">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </footer>
</html>
