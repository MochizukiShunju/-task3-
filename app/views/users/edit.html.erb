<html lang="ja">


  <body>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>User info</h2>
          <% if @user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "error") %>errors prohibited this book from being saved</h2>
                <ul>
                  <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
           <%= form_with model:@user, local:true do |f| %>
              <div class="form-group">
                <h4>Name</h4>
                <%= f.text_field :name, class: "form-control name" %>
              </div>
              <div class="form-group">
                <h4>Image</h4>
                <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
              </div>
              <div class="form-group">
                <h4>Introduction</h4>
                <%= f.text_area :introduction, class: "form-control introduction" %>
              </div>
              <div class="form-group">
                <h4>Introduction</h4>
                <%= f.submit "Update User", class: "btn btn-secondary" %>
              </div>
           <% end %>
        </div>
      </div>
    </div>
  </body>

  <footer class="container">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>
  </footer>
</html>

