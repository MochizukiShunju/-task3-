<body>
  <h2>User info</h2>

  <%= form_with model:@user, local:true do |f| %>
    <h4>Name</h4>
    <%= f.text_field :name %><br>

    <label for="inputImage">Image</label>
    <%= f.attachment_field :profile_image %><br>

    <h4>Introduction</h4>
    <%= f.text_area :introduction %><br>

    <%= f.submit "Uptade user" %>
  <% end %>
</body>

