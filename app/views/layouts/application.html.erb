<!DOCTYPE html>
<html>

  <head>
    <title>TASK3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://kit.fontawesome.com/f103d32934.js" crossorigin="anonymous"></script>

    <div class="container">
      <div class="row">
        <div class="col-ms-3">
          <h1>Bookers</h1>
        </div>
        <div class="col-ms">
          <% if user_signed_in? %>
            <li><%= link_to "Home", user_path(current_user.id, class:"fas fa-home") %></li>
            <li><%= link_to "Users", users_path, class:"fas fa-users" %></li>
            <li><%= link_to "Books", books_path, class:"as fa-book-open" %></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete, class:"fas fa-sign-out-alt" %></li>
           <% else %>
            <li><%= link_to "Home", root_path, class:"fas fa-home" %></li>
            <li><%= link_to "About", root_path, class:"fas fa-link" %></li>
            <li><%= link_to "Sigh up", new_user_registration_path, class:"fas fa-user-plus" %></li>
            <li><%= link_to "Login", new_user_session_path, class:"fas fa-sign-out-alt" %></li>
          <% end %>
        </div>
      </div>
    </div>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
