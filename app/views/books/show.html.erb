<html lang="ja">
  <head>
    <mate charset="UTF-8" />
  </head>

  <body class="container">
    <div class="row">
      <div class="col-sm-3">
        <%= render 'layouts/body' %>
      </div>

      <div class="col-sm-9">
        <h1>Book detail</h1>
        <table class="table">
            <tr>
              <td>
                <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %><br><br>
                <a href="<%= user_path(@user.id) %>"><%= @user.name %></a>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
            </tr>
        </table>
      </div>
    </div>
  </body>

  <footer class="container">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </footer>

</html>
