

<body class="container">
    <div class="row">
        <div>
          <% if @book.errors.any? %>
           <p><font color="#FF0000">errors prohibited this book from being saved</font></p>
          <% end %>

          <% if @book.errors.include?(:title) %>
           <p>・Title can't be blank</font></p>
          <% end %>

          <% if @book.errors.include?(:body) %>
           <p>・Body can't be blank</font></p>
          <% end %>
        </div>

        <div class="mx-auto" style="width: 300px;">
          <h1>Editing Book</h1>

          <%= form_with model:@book, local: true do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>

            <h4>Opinion</h4>
            <%= f.text_area :body %><br>
            <%= f.submit 'Update book' %><br>

            <%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back",  books_path %>
          <% end %>
        </div>
    </div>
</body>

<footer class="container">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </footer>
</footer>

