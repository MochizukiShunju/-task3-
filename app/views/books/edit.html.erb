

<body class="container">
    <div class="row">
        <div>
          <% if @book.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@book.errors.count, "error") %>errors prohibited this book from being saved</h2>
                <ul>
                  <% @book.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
        </div>

        <div class="mx-auto" style="width: 300px;">
          <h1>Editing Book</h1>

          <%= form_with model:@book, local: true do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>

            <h4>Opinion</h4>
            <%= f.text_area :body %><br>
            <%= f.submit 'Update book' %><br>

            <%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back",  books_path %>
          <% end %>
        </div>
    </div>
</body>

<footer class="container">
    <div class="row">
      <div class="mx-auto">
